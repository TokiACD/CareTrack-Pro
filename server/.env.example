# Database Configuration
DATABASE_URL="postgresql://caretrack:dev_password@localhost:5432/caretrack_pro?schema=public&connection_limit=10&pool_timeout=20&connect_timeout=10"

# Redis Configuration (Session Storage & Caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""  # Leave empty for development
REDIS_DB=0
REDIS_TTL=3600  # 1 hour default TTL

# Database Connection Pooling
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=30000
CONNECTION_POOLING_ENABLED=true
READ_REPLICA_ENABLED=false

# Database Performance
SLOW_QUERY_THRESHOLD=1000
PERFORMANCE_MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Healthcare Data Compliance (HIPAA)
DATA_RETENTION_DAYS=2555
DB_ENCRYPTION_ENABLED=true
ENCRYPTION_KEY="your-32-character-secret-key-here!"
AUDIT_LOGGING_ENABLED=true
PHI_ENCRYPTION_ENABLED=true

# Authentication (SECURITY CRITICAL - Generate with: openssl rand -hex 32)
JWT_SECRET="REPLACE_WITH_64_CHARACTER_SECRET_GENERATED_BY_OPENSSL_RAND_HEX_32"
JWT_EXPIRES_IN="8h"
JWT_REFRESH_EXPIRES_IN="7d"

# Session Management (SECURITY CRITICAL - Generate with: openssl rand -hex 32)
SESSION_SECRET="REPLACE_WITH_64_CHARACTER_SECRET_GENERATED_BY_OPENSSL_RAND_HEX_32"
SESSION_TIMEOUT=1800000  # 30 minutes for HIPAA compliance

# Encryption Keys (SECURITY CRITICAL)
PHI_ENCRYPTION_KEY="REPLACE_WITH_64_CHARACTER_PHI_ENCRYPTION_KEY"
DATA_AT_REST_KEY="REPLACE_WITH_64_CHARACTER_DATA_ENCRYPTION_KEY"

# Password Security
BCRYPT_ROUNDS=14  # Minimum 12 for healthcare applications

# Seed Data (for initial setup - use strong passwords in production)
SEED_ADMIN_EMAIL="admin@caretrack.com"
SEED_ADMIN_PASSWORD=""  # Leave empty to auto-generate secure password

# Server Configuration
PORT=5001
NODE_ENV="development"

# Email Service Configuration
EMAIL_SERVICE="smtp"  # "sendgrid" or "smtp"
SENDGRID_API_KEY=""   # If using SendGrid

# SMTP Configuration (fallback or primary)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="CareTrack Pro <noreply@caretrack.com>"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:5000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100    # 100 requests per window

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR="uploads"

# Logging Configuration
LOG_LEVEL="info"               # error, warn, info, debug
LOG_TO_FILE="false"            # Enable file logging in production
LOG_FILE_PATH="./logs/app.log"

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"     # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH="./backups"
BACKUP_ENCRYPTION_ENABLED=true

# Security Configuration
HIPAA_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
SECURE_HEADERS_ENABLED=true
AUTO_LOGOUT_TIMEOUT=1800000     # 30 minutes

# Monitoring and Alerting
MONITORING_ENABLED=true
ALERT_EMAIL="admin@caretrack.com"
SLACK_WEBHOOK_URL=""
PERFORMANCE_THRESHOLD_MS=2000