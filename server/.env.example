# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/caretrack_pro?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="8h"

# Seed Data (for initial setup - use strong passwords in production)
SEED_ADMIN_EMAIL="admin@caretrack.com"
SEED_ADMIN_PASSWORD=""  # Leave empty to auto-generate secure password

# Server Configuration
PORT=3001
NODE_ENV="development"

# Email Service Configuration
EMAIL_SERVICE="smtp"  # "sendgrid" or "smtp"
SENDGRID_API_KEY=""   # If using SendGrid

# SMTP Configuration (fallback or primary)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="CareTrack Pro <noreply@caretrack.com>"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100    # 100 requests per window

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR="uploads"

# Logging Configuration
LOG_LEVEL="info"               # error, warn, info, debug
LOG_TO_FILE="false"            # Enable file logging in production
LOG_FILE_PATH="./logs/app.log"