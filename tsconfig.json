{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@caretrack/shared": ["./shared/src/index"],
      "@caretrack/shared/*": ["./shared/src/*"]
    }
  },
  "include": [],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./shared"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "postgres_data",
    "coverage",
    "test-results"
  ]
}